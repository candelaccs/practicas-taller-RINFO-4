programa ejercicio3 
procesos 
  proceso juntarPapeles  
  comenzar 
    mientras HayPapelEnLaEsquina  
      tomarPapel 
  fin 
  proceso juntarCinco 
  comenzar
    repetir 5
      juntarPapeles 
      mover 
  fin 
  proceso juntarCuatro
  comenzar
    repetir 4
      juntarPapeles
      mover
  fin
  proceso EnviarMensajes 
  comenzar
    EnviarMensaje (1,r1)
    EnviarMensaje (2, r2)
    EnviarMensaje (3,r3)
  fin
areas 
  area1: AreaP (1,1,1,100) 
  area2: AreaP (2,1,2,100) 
  area3: AreaP (3,1,3,100)  
  area4: AreaP (4,1,4,1)
robots 
  robot coordinador
  comenzar
    EnviarMensajes
  fin
  robot r1 
  variables 
    id: numero
  comenzar 
    RecibirMensaje (id, cor)
    repetir 19
      juntarCinco 
      EnviarMensaje (id, r2) 
      EnviarMensaje (id, r3) 
      RecibirMensaje (id, r2)
      RecibirMensaje (id, r3) 
    juntarCuatro
  fin 
  robot r2 
  variables 
    id: numero
  comenzar 
    RecibirMensaje (id, cor)
    repetir 19
      juntarCinco 
      EnviarMensaje (id, r1) 
      EnviarMensaje (id, r3) 
      RecibirMensaje (id, r1) 
      RecibirMensaje (id, r3)
    juntarCuatro
  fin 
  robot r3
  variables
    id: numero
  comenzar 
    RecibirMensaje (id, cor)
    repetir 19
      juntarCinco  
      EnviarMensaje (id, r2)
      EnviarMensaje (id, r1)
      RecibirMensaje (id, r2) 
      RecibirMensaje (id, r1)
    juntarCuatro
  fin 
variables
  r1: r1
  r2: r2
  r3: r3
  cor: coordinador
comenzar
  AsignarArea (r1,area1)
  AsignarArea (r2, area2)
  AsignarArea (r3, area3)
  AsignarArea (cor, area4)
  Iniciar (cor,4,1)
  Iniciar (r1, 1,1)
  Iniciar (r2,2,1)
  Iniciar (r3,3,1)
fin




b)

programa ejercicio3b
procesos  
  proceso juntarPapeles   
  comenzar  
    mientras HayPapelEnLaEsquina   
      tomarPapel  
  fin  
  proceso juntarN (E n:numero) 
  variables
    aux: numero
  comenzar 
    aux:=0
    mientras ((PosCa < 100) & (aux <> n))
      juntarPapeles  
      aux:= aux+1
      mover  
  fin 
  proceso EnviarMensajes
  comenzar
    EnviarMensaje (1,r1)
    EnviarMensaje (2,r2)
    EnviarMensaje (3,r3)
  fin
areas  
  area1: AreaP (1,1,1,100)   
  area2: AreaP (2,1,2,100)  
  area3: AreaP (3,1,3,100)   
  area4: AreaP (4,1,4,1)
robots  
  robot coordinador
  comenzar
    EnviarMensajes
  fin
  robot r1  
  variables  
    n, id: numero
  comenzar  
    RecibirMensaje (id, cor)
    mientras (PosCa < 100) 
      Random (n, 1,5) 
      juntarN (n) 
      EnviarMensaje (id, r2)  
      EnviarMensaje (id, r3)  
      RecibirMensaje (id, r3) 
      RecibirMensaje (id, r2)  
  fin  
  robot r2  
  variables  
    n,id: numero
  comenzar 
    RecibirMensaje (id, cor) 
    mientras (PosCa < 100)
      Random (n, 1,5)
      juntarN (n)
      EnviarMensaje (id, r1) 
      EnviarMensaje (id, r3)  
      RecibirMensaje (id, r3)  
      RecibirMensaje (id, r1) 
  fin  
  robot r3 
  variables 
    n, id: numero
  comenzar  
    RecibirMensaje (id, cor)
    mientras (PosCa < 100)
      Random (n,1,5)
      juntarN (n)
      EnviarMensaje (id, r2) 
      EnviarMensaje (id, r1) 
      RecibirMensaje (id, r2)  
      RecibirMensaje (id, r1) 
  fin  
variables 
  r1: r1 
  r2: r2 
  r3: r3 
  cor: coordinador
comenzar 
  AsignarArea (r1,area1) 
  AsignarArea (r2, area2) 
  AsignarArea (r3, area3) 
  AsignarArea (cor, area4)
  Iniciar (cor, 4,1)
  Iniciar (r1, 1,1) 
  Iniciar (r2,2,1) 
  Iniciar (r3,3,1) 
fin 
